<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Ajouter au Panier</title>
</head>

<body>
  <!--Par image -->
<div class="product-container">
  <div class="product">
    <img class="product-img" src="<%= @item.order_items%>" alt="Card image">
    <div class="product-body">
        <h4 class="product-title"><%= @item.title%></h4>
        <p class="product-text"><%= @item.description %></p>
        <p class="product-price"><small class="text-muted"><%= @item.price%> €</small></p>
      <% if user_sign_in? %>
          <%= link_to "Ajouter au panier", root_path, class: "show-button"%>
      <% end %>
    </div>
  </div>

  <!--Par élement -->
  <div class="element">
    <div>
      <img src="<%= @item.order_items%>" class="element_picture" alt=" ">
    <div class="element_text">
      <h4 class="product-title"><%= @item.title%></h4>
      <p><%= @item.description%></p>
    </div>
    <p class="product-price"><small class="text-muted"><%= @item.price %> €</small></p>
    <% if user_signed_in? %>
      <%= link_to "Ajouter au panier", root_path, class: "cart-button"%>
    <% end %>
    </div>
</div>

</body>
</html>
